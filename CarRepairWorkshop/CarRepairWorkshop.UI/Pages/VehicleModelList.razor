@page "/vehicle-models"
@inject IVehicleModelService vehicleModelService
@inject NavigationManager NavigationManager

<button class="btn btn-primary form-control" @onclick="AddVehicleModel">Add a new Vehicle Model</button>

@if (VehicleModels is not null)
{
    <table class="table table-hover table-bordered">
        <thead>
        <th>Model Name</th>
        <th>Make</th>
        <th>Year</th>
        <th></th>
        </thead>
        <tbody>
        @foreach (var vehicleModel in VehicleModels)
        {
            <tr>
                <td>@vehicleModel.ModelName</td>
                <td>@vehicleModel.Make</td>
                <td>@vehicleModel.Year</td>
                <td>
                    <a href="vehicle-model-details/@vehicleModel.Id">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    
    private IEnumerable<VehicleModel>? VehicleModels { get; set; }

    protected override async Task OnInitializedAsync()
    {
        VehicleModels = await vehicleModelService.GetVehicleModelsAsync();
    }
    
    private async Task AddVehicleModel()
    {
        NavigationManager.NavigateTo("add-vehicle-model");
    }
}